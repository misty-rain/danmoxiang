<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <include layout="@layout/include_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/text_product_form_number"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/edtoutwhcode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_line_height"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/color_txt_hint"
            android:textSize="18sp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:id="@+id/imgscannout"
            android:src="@mipmap/main_icon_qrcode"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:text="@string/text_out_customer_code" />
        <EditText
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_line_height"
            android:hint="@string/input_out_customer_code"
            android:textSize="18sp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:textColorHint="@color/color_txt_hint"
            android:textColor="@color/black"
            android:id="@+id/edtoutcustomercode"
            android:background="@color/transparent"
            android:inputType="text"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="2"
            android:text="@string/btn_text_search"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            android:id="@+id/btnsearch"
            android:background="@color/enable_button"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/text_customer_name"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/edtoutcompany"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/input_line_height"
            android:layout_marginLeft="20dp"
            android:background="@color/transparent"
            android:textColor="@color/black"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/text_saleser_name"
            android:textSize="18sp"/>
        <EditText
            android:singleLine="true"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/input_line_height"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:textColorHint="@color/color_txt_hint"
            android:textColor="@color/black"
            android:id="@+id/edtoutcount"
            android:background="@color/transparent"
            android:inputType="text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/text_finish_date"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/edtsanncode"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/input_line_height"
            android:layout_marginLeft="20dp"
            android:background="@color/transparent"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/color_txt_hint"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:text="@string/text_materiel" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_line_height"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="@string/input_materiel"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/color_txt_hint"
            android:textSize="18sp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="2"
            android:text="@string/btn_text_search"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            android:background="@color/enable_button"
            />
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="@string/text_masteriel_info"
            android:textSize="18sp"/>
    <TextView
        android:singleLine="true"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/input_line_height"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:id="@+id/edtcodecount"
        android:background="@color/transparent"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/text_inventory_count"
            android:textSize="18sp"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="@dimen/input_line_height"
            android:layout_marginLeft="20dp"
            android:background="@color/transparent"
            android:inputType="text"
            android:singleLine="true"
            android:text="1"
            android:textColor="@color/black"
            android:textColorHint="@color/color_txt_hint"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/text_product_count"
            android:textSize="18sp"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="@dimen/input_line_height"
            android:layout_marginLeft="20dp"
            android:background="@color/transparent"
            android:inputType="text"
            android:singleLine="true"
            android:enabled="false"
            android:text="0"

            android:textColor="@color/black"
            android:textColorHint="@color/color_txt_hint"
            android:textSize="18sp"/>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/input_line_height"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/btn_text_save"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical|center_horizontal"
            android:id="@+id/btnsave"
            android:background="@drawable/button_bg_green"
            />
    </LinearLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>